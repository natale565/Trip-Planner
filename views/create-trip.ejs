<script>
    $(document).ready(function() {
        // Open Modal 1
        $('#openModal1').click(function() {
            $('#modal1').modal('show');
        });

        // Open Modal 2
        $('#openModal2').click(function() {
            $('#modal2').modal('show');
        });

        // Open Modal 3
        $('#openModal3').click(function() {
            $('#modal3').modal('show');
        });

        // Open Modal 4
        $('#openModal4').click(function() {
            $('#modal4').modal('show');
        });
    });
</script>
