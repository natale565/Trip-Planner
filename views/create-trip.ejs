<!-- Modal 1-->
<div class="modal fade" id="modal1" tabindex="-1" aria-labelledby="modal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modal1Label">Modal 1 Title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form><div>
                  <label for ="airport">Airport:</label>
                  <input class = 'form-input' type="text">
                </div>
                
                <div> <label for ="flightNum">Flight Number:</label>
                  <input class = 'form-input' type="text"></div>

                   <div> <label for ="departAir">Departing Airport:</label>
                  <input class = 'form-input' type="text"></div>

                   <div> <label for ="departTime">Departing Time:</label>
                  <input class = 'form-input' type="text"></div>

                   <div> <label for ="arrivalAir">Arrival Airport:</label>
                  <input class = 'form-input' type="text"></div>

                   <div> <label for ="arrivalTime">Arrival Time:</label>
                  <input class = 'form-input' type="text"></div>
                  
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Save</button>
            </div>
        </div>
    </div>
</div>

