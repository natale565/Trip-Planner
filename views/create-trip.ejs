<%- include('partials/head')%> 

<%- include('partials/navbar') %>

    <label for="dest">Start Planning!</label><br>
<h3>Flights</h3>
<button type="button" class="btn btn-primary" id="openModal1">Click Here To Add Your Flight Info</button>


<h3>Lodging</h3>
<button type="button" class="btn btn-secondary" id="openModal2">Click Here To Add Your Lodging Info</button>

