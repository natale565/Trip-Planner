<body>
  <h1>Start a New Trip</h1>

  <form action="/save-trip" method="POST">
    <label for="title">Trip Title:</label>
    <input type="text" id="title" name="title" required>

    <label for="flight">Flight Information:</label>
    <input type="text" id="flight" name="flight" required>

    <label for="lodging">Lodging Information:</label>
    <input type="text" id="lodging" name="lodging" required>

    <label for="itinerary">Itinerary:</label>
    <textarea id="itinerary" name="itinerary"></textarea>

    <label for="invites">Invite People:</label>
    <input type="text" id="invites" name="invites">

    <button type="submit">Save Trip</button>
  </form>
</body>

