                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form><div>
                  <label for ="airport">Airport:</label>
                  <input class = 'form-input' type="text">
                </div>
                
                <div> <label for ="flightNum">Flight Number:</label>
                  <input class = 'form-input' type="text"></div>

                   <div> <label for ="departAir">Departing Airport:</label>
                  <input class = 'form-input' type="text"></div>

                   <div> <label for ="departTime">Departing Time:</label>
                  <input class = 'form-input' type="text"></div>
                  
                </form>

    <h2 class="mb-4">Your Trips</h2>
    <div class="row">
  
   
        <div class="col-md-4 mb-4">
        <div class="card mb-4">
        <a href="">
        <div class="card-body">
            <h2 class="card-title"></h2>
            <p class="card-text"></p>
        </div>
        </a>
        </div>
        </div> 
   
        <p>No trips found for this user.</p>
   
        </div>
    
        <div class="row">
            <div class="col-md-6">
              <h2>Login</h2>
          
              <form class="login-form">
                <div>
                  <label for="email-login">email:</label>
                  <input class="form-input" type="text" id="email-login" />
                </div>
                <div>
                  <label for="password-login">password:</label>
                  <input class="form-input" type="password" id="password-login" />
                </div>
                <div>
                  <button type="submit">login</button>
                </div>
              </form>
            </div>
            <div class="col-md-6">
              <h2>Signup</h2>
          
              <form class="signup-form">
                <div>
                  <label for="username-signup">username:</label>
                  <input class="form-input" type="text" id="username-signup" />
                </div>
                <div>
                  <label for="email-signup">email:</label>
                  <input class="form-input" type="text" id="email-signup" />
                </div>
                <div>
                  <label for="password-signup">password:</label>
                  <input class="form-input" type="password" id="password-signup" />
                </div>
                <div>
                  <button type="submit">signup</button>
                </div>
              </form>
            </div>
          </div>
 
